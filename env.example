# Render injects PORT automatically
NODE_ENV=production

# Supabase (service role MUST NOT be exposed to frontend)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# BSC RPC (comma-separated)
BSC_RPC_URLS=https://bsc-dataseed1.binance.org/,https://bsc-dataseed2.binance.org/

# Contracts (BNB mainnet)
AIRDROP_CONTRACT=0x16B7a2e6eD9a0Ace9495b80eF0A5D0e3f72aCD7c

# Indexer
CONFIRMATIONS=12
BATCH_BLOCKS=2000
POLL_INTERVAL_MS=5000
CHAIN_SYNC_ID=bsc_airdrop

# Optional security for admin endpoints / future auth
JWT_SECRET=change_me
ADMIN_API_KEY=change_me


